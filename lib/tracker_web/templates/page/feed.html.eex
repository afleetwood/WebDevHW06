<%= if @current_user do %>

  <div class="row">
    <div class="col">
      <%= render TrackerWeb.TaskView, "index.html",
	  Map.put(assigns, :action, task_path(@conn, :create)) %>
    </div>
  </div>

<% end %>

<% Enum.map @tasks, fn task -> %>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
	<h6 class="card-title"><%= task.title %></h6>
	<p><%= task.body %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
